<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Here you can adopt or give for adoption dogs that need a loving family... Adoption couldn't be easier and faster !!!</h2>
        <br></br>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Add the name of the dog :</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Example: Kira">
          </div>
          <div class="form-group">
            <label for="example-description">Give us a description of the dog:</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="In what conditions did you found the dog, what breed is the dog,the age (if possible),etc. "></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Dogs for adoption:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="dog/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
